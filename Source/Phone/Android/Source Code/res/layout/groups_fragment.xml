<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/lv_groupsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel_JoinGroups"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:dividerHeight="10.0sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/rel_JoinGroups"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" >

        <RelativeLayout
            android:id="@+id/rel_JoinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp" >

            <ImageView
                android:id="@+id/JoinIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/add" />

            <com.guardianapp.views.CusFntTextView
                android:id="@+id/tv_JoinGroups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/JoinIcon"
                android:text="Join Group"
                android:textColor="#54C758"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.guardianapp.views.CusFntTextView
            android:id="@+id/tv_pen_veri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rel_JoinBtn"
            android:layout_marginLeft="5dp"
            android:text="@string/grp_pen_veri_msg"
            android:textColor="#54C758"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>